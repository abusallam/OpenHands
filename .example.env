# =================================================================
# AI CODER CONFIGURATION - GEMINI & INTERNAL DATABASES
# =================================================================

# Application Settings
APP_NAME=AI_Coder
APP_ENV=production
DEBUG=false
SECRET_KEY=your_secure_secret_key_here
API_VERSION=v1
PORT=8000
HOST=0.0.0.0

# Google Gemini Configuration
GOOGLE_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro-code
GEMINI_TEMPERATURE=0.7
MAX_TOKENS=8192
CONTEXT_WINDOW=32768

# Internal Database Configuration
DATABASE_URL=postgresql://ai_coder:internal_db_password@internal_db:5432/ai_coder_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Internal Redis Configuration
REDIS_HOST=internal_redis
REDIS_PORT=6379
REDIS_PASSWORD=internal_redis_password
REDIS_DB=0

# Authentication
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# GitHub Integration
GITHUB_TOKEN=your_github_token_here
GITHUB_USERNAME=your_username
GITHUB_REPO=your_repo_name

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Settings
CORS_ORIGINS=https://your-domain.com
ALLOWED_HOSTS=your-domain.com

# AI Code Generation Settings
CODE_GENERATION_TIMEOUT=30
MAX_CODE_LENGTH=10000
SUPPORTED_LANGUAGES=python,javascript,typescript,java
DEFAULT_FRAMEWORK=fastapi 